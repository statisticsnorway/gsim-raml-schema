#%RAML 1.0 Library
uses:
  Link: ./annotation/Link.raml
  Doc: ./annotation/Doc.raml
  IdentifiableArtefact: ./abstract/IdentifiableArtefact.raml
  Concept: ./abstract/Concept.raml

types:
  Variable:
    (Doc.objectGsimGroup): CONCEPT
    description: The use of a Concept as a characteristic of a Population intended to be measured.
    displayName: Variable
    type: [ IdentifiableArtefact.IdentifiableArtefact, Concept.Concept ]

    properties:
      unitType:
        type: string
        displayName: Unit type
        (Link.types): [UnitType]

    example: !include ../examples/_main/Variable_PersonMaritualStatus.json
