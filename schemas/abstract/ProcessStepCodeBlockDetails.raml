#%RAML 1.0 Library
types:

  ProcessStepCodeBlockDetails:
    description: A key-value-store for adding a complex array of code block attributes to the ProcessStep-object.
    type: object

    properties:
      codeBlockType:
        type: string
        description: The type of code block
        displayName: Type of code block
        enum:
          - DOCUMENTATION
          - CODE

      codeBlockTitle:
        type: string
        description: Title of code block
        displayName: Title

      codeBlockValue:
        type: string
        description: The actual code or text
        displayName: Value

      codeBlockIndex:
        type: number
        description: Index of the code block
        displayName: Index